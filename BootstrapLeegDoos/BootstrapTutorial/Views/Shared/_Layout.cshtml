<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .socials {
            padding: 10px;
        }

        .row {
            margin-left: 0px;
            margin-right: 0px;
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">

        <div class="container">
            <div class="navbar-header">
                @Html.ActionLink("Beter vervoegen", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>


            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li class="active">
                            <a href="@Url.Action("Index", "Home")"><span class="glyphicon glyphicon-home"></span> Home</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index", "Home")"><span class="glyphicon glyphicon-star"></span> Top Deelnemers</a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-user"></span> Over ons<b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li><a href="#">Bedrijfsprofiel</a></li>
                                <li><a href="#">Contactgegevens</a></li>
                            </ul>
                        </li>

                    </ul>
                    <form class="navbar-form navbar-left" role="search">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Waar bent u op zoek naar?">
                        </div>
                        <button type="submit" class="btn btn-default">Zoeken</button>
                    </form>
                    <ul class="nav navbar-nav navbar-right">
                        <li>@Html.ActionLink("Inloggen", "Index", "Account", null, new { @class = "" })</li>
                    </ul>
                </div>

            </div>
        </div>
    </nav>



    <div class="container-fluid">

        <div class="row">
            <div class="col-md-2">

            </div>
            <div class="col-md-8">
                @RenderBody()
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
                </footer>
            </div>
            <div class="col-md-2">

            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>

</html>
